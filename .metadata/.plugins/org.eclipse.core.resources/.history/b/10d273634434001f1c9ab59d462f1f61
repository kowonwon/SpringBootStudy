spring.application.name=springbootclass-app02

# H2 Database 접속 설정
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console
spring.datasource.url=jdbc:h2:~/memo
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=root
spring.datasource.password=12345678

# JAP
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update

# Mybatis
mybatis.type-aliases-package=com.springbootstudy.app.domain
mybatis.mapper-locations=classpath:mappers/**/*Mapper.xml
mybatis.configuration.map-underscore-to-camel-case=true

# 뷰 파일 변경 자동 적용
spring.devtools.livereload.enabled=true

# JSP 뷰 설정
spring.mvc.view.prefix=/views/
#spring.mvc.view.prefix=classpath:/templates/jsp/
spring.mvc.view.suffix=.jsp
server.servlet.jsp.init-parameters.development=true

# Thymeleaf 뷰 설정
spring.thymeleaf.prefix=classpath:/templates/
spring.thymeleaf.suffix=.html
spring.thymeleaf.view-names =th/*