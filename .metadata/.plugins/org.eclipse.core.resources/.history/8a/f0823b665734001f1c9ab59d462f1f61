		<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.min.js" ></script>
		<script src="https://cdn.iamport.kr/v1/iamport.js"></script>
		<script>
		
			// 결제정보반영
			
			const lectureName = document.querySelector("#lectureName").innerText;
			const lecturePrice = document.querySelector("#lecturePrice").innerText;
			
			const title1 = document.querySelector("#title1").innerText;
			const price1 = document.querySelector("#price1").innerText;
			
			const onClickChange0 = () => {
				const title0 = document.querySelector("#title0").innerText;
				const price0 = document.querySelector("#price0").innerText;
				lectureName = title0;
				lecturePrice = price0;
			}
			const lectureSelect = document.querySelector("#lectureSelect0");
			lectureSelect.addEventListener('click', onClickChange0);
			
		
			// 결제
			IMP.init("imp62227326");
	
			const price = document.querySelector("span").innerHTML;
			const name = document.querySelector("h5").innerHTML;
	
			const payBt = document.querySelector("#payBt");
			
			const onClickPay = () => {
				IMP.request_pay({
					pg: "kakaopay",
					pay_method: "card",
					amount: price,
					name: name,
					lectureId: "1001",
					buyer_email: "gildong@gmail.com",
			    	buyer_name: "홍길동"
				},
				async function (response) {
					if (response.error_code != null) {
						return alert(`결제에 실패했습니다. 에러 내용 : ${response.error_msg}`);
					}
					
					const notified = await fetch(`${SERVER_BASE_URL}/payment/complete`, {
						method: "POST",
						headers: {"Content-Type": "application/json"},
						body: JSON.stringify({
							imp_uid: response.imp_uid,
							merchant_uid: response.merchant_uid
						})
					})
				}
				);
			};
	
			payBt.addEventListener("click", onClickPay);
		</script>
