<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
	</head>
	<body>
		<h2>payment</h2>
		<span>효자손</span>
		<p>100</p>
		<button>결제하기</button>
	</body>
	<script src="https://cdn.iamport.kr/v1/iamport.js"></script>
	<script>
		IMP.init("imp62227326");

		const price = document.querySelector("p").value;
		const lectureId = document.querySelector("span").value;

		const button = document.querySelector("button");
		const onClickPay = () => {
			alert('결제 버튼 누름.');
			IMP.request_pay({
				pg: "kakaopay",
				pay_method: "card",
				amount: price,
				name: "라면",
				lectureId: lectureId,
				buyer_email: "gildong@gmail.com",
		    buyer_name: "홍길동"
			});
		button.addEventListener("click", onClickPay);
	</script>
</html>